<div class="ui three stackable cards">
  <% @posts.each do |post| %>
  
    <div class="card">
    <div class="content">
        <h3><a href="/<%= post.user.username%>"><%= post.user.username %></a></h3>
      </div>
      <div class="image">
        <%= image_tag post.image.service_url %>
      </div>
      <div class="content">
        <% post.tags.each do |tag| %>
          <%= button_tag tag.tag, class: 'ui primary button' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>