<h1><%= @tag.tag %></h1>
<div class="ui three stackable cards">
  <% @tag && @posts.each do |post| %>
    <div class="card">
      <div class="image">
        <%= image_tag post.image.service_url %>
      </div>
      <div class="content">
        <% post.tags.each do |tag| %>
          <%= button_tag tag.tag, class: 'ui primary button' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_tag_path(@tag) %> |
<%= link_to 'Back', tags_path %>
