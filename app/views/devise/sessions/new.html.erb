<div class="ui form" id="login">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, autocomplete: "email", placeholder: 'Username or email' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'At least 6 characters' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field flex">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "ui teal button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>